demo_links <- sprintf("{filename}/Articles/%s_pnp.rst#%s", base, cfg_base)
df <- data.frame(Title=rst_link(demo_links, titles),
                 Cutlines=paste(rst_link(letter_urls, "letter"), "/", rst_link(A4_urls, "A4")),
                 stringsAsFactors=FALSE)

# bleed
