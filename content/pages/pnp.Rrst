cfg_base <- gsub("_bleed", "", cfg_names)
cap <- function(s) { paste0(toupper(substring(s, 1, 1)), substring(s, 2)) }
demo_links <- sprintf("{filename}/Articles/%s_pnp.rst#%s", base, cfg_base)
