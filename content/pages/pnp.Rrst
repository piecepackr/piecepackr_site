.. {r save_print_and_play, echo=FALSE}
library("piecepackr")
library("grid")
RData_files <- list.files("../tmp", pattern="RData", full.names=TRUE)
ee <- new.env()
for (ff in RData_files) {
    load(ff, envir=ee)
}
for (name in sort(names(ee))) {
    ee[[name]]$cache$reset()
}
save(list=names(ee), file="../share/demo_cfgs.RData", envir=ee)
