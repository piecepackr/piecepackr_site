titles <- sapply(cfg_names, function(x) {tt <- ee[[x]]$title; ifelse(is.null(tt), "", tt)})
letter_urls <- sprintf("{static}/share/pnp/%s_letter.pdf", cfg_names)
A4_urls <- sprintf("{static}/share/pnp/%s_A4.pdf", cfg_names)
